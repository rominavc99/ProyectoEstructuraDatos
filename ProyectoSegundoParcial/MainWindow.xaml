<Window x:Class="ProyectoSegundoParcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoSegundoParcial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cbProductos" HorizontalAlignment="Left" Margin="119,60,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CbProductos_SelectionChanged">
            <ComboBoxItem>Celular</ComboBoxItem>
            <ComboBoxItem>Computadora de Escritorio</ComboBoxItem>
            <ComboBoxItem>Laptop</ComboBoxItem>
            <ComboBoxItem>Impresora</ComboBoxItem>
            <ComboBoxItem>Bocina</ComboBoxItem>
            <ComboBoxItem>Television</ComboBoxItem>
        </ComboBox>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="270,60,0,0" VerticalAlignment="Top" Width="76" Click="BtnAgregar_Click"/>
        <Label Content="Producto" HorizontalAlignment="Left" Margin="50,57,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="grdFormulario" HorizontalAlignment="Left" Height="303" Margin="50,108,0,0" VerticalAlignment="Top" Width="694">

        </Grid>
        
       

    </Grid>
</Window>
